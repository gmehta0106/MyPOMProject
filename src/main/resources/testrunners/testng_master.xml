
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">


<suite name="OpenCart Regression Suit" verbose="4" thread-count="4" parallel="tests">
	
	
	<test name="Login Page Test_chrome">
		<parameter name="browser" value="chrome"></parameter>
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
	</classes>
	</test> 
	<test name="Login Page Test_firefox">
		<parameter name="browser" value="firefox"></parameter>
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
	</classes>
	</test> 
	<test name="Login Page Test_edge">
		<parameter name="browser" value="edge"></parameter>
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
	</classes>
	</test> 
	<test name="Login Page Test_safari">
		<parameter name="browser" value="safari"></parameter>
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
	</classes>
	</test> 
	
	
	
	<test name="Accounts Page Test_chrome">
		<parameter name="browser" value="chrome"></parameter>
		<classes>
			<class name="com.qa.opencart.tests.AccountsPageTest"/>
	</classes>
	</test> 
	<test name="Accounts Page Test_safari">
		<parameter name="browser" value="safari"></parameter>
		<classes>
			<class name="com.qa.opencart.tests.AccountsPageTest"/>
	</classes>
	</test> 
	<test name="Accounts Page Test_firefox">
		<parameter name="browser" value="firefox"></parameter>
		<classes>
			<class name="com.qa.opencart.tests.AccountsPageTest"/>
	</classes>
	</test> 
	<test name="Accounts Page Test_edge">
		<parameter name="browser" value="edge"></parameter>
		<classes>
			<class name="com.qa.opencart.tests.AccountsPageTest"/>
	</classes>
	</test> 
	
	<test name="Search Test">
		<parameter name="browser" value="edge"></parameter>
		<classes>
			<class name="com.qa.opencart.tests.SearchTest"/>
	</classes>
	</test> 
	
	<!--<test name="Product Info Test">
		<classes>
			<class name="com.qa.opencart.ProductPageInfoTest"/>
		</classes>
	</test> -->
		
</suite> 
	
	